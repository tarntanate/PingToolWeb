@model IndexViewModel
@{
	ViewData["Title"] = "Home Page";
}

<div class="mt-3">
	<form method="post" class="form-inline">
		<input class="form-control mr-2" style="min-width: 300px" type="text" name="url" placeholder="domain name or ip..." asp-for="url" />
		<button type="submit" class="btn btn-primary">Ping</button>
	</form>
	<div class="mt-2">
		<span class="text-info">Response Time: <span>@Model.responseTime</span>ms</span>
	</div>
	<div class="alert-danger">@Model.error</div>
</div>
